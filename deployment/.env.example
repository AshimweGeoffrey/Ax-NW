# Backend environment example (copy to backend/.env on server)
PORT=3001
API_VERSION=v1
APP_TZ=Africa/Kigali
FRONTEND_URL=http://localhost

# Prisma DATABASE_URL format
# mysql://USER:PASSWORD@HOST:3306/DBNAME?connection_limit=5
DATABASE_URL=

# JWT
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Optional mailer
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM="AX Stock <no-reply@example.com>"
